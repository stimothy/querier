@model DataManager.Answer;

@{
    ViewData["Title"] = Model.Name;
}

<div class="container-fluid">
    @using (Html.BeginForm("SaveAnswer", "Answer", FormMethod.Post, Model))
    {
        <table cellpadding="0" cellspacing="0">
            @Html.HiddenFor(model => Model.UserID)
            @Html.HiddenFor(model => Model.QueryNumber)
            @Html.HiddenFor(model => Model.QuestionNumber)
            @Html.HiddenFor(model => Model.Number)
            <tr>
                <td>
                    @*@Html.DisplayNameFor(model => Model.Name):*@
                    Change Name: 
                </td>
                <td>
                    @Html.TextBoxFor(model => Model.Name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => Model.Order):
                </td>
                <td>
                    @Html.TextBoxFor(model => Model.Order)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => Model.Score):
                </td>
                <td>
                    @Html.TextBoxFor(model => Model.Score)
                </td>
            </tr>
        </table>
        <input style="margin-top: 5px;" class="btn btn-default" type="button" value="Cancel" onclick="location.href='@Url.Action("ManageQuestion", "Question", new { queryNumber = Model.QueryNumber, questionNumber = Model.QuestionNumber })'">
        <input style="margin-top: 5px;" class="btn btn-success" type="submit" value="Save" /> 
    }
</div>