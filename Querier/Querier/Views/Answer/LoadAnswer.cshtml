@model DataManager.Answer;

@{
    ViewData["Title"] = "Manage Answer";
}

<div class="container-fluid">
    @using (Html.BeginForm("SaveAnswer", "Answer", FormMethod.Post, Model))
    {
        <table cellpadding="0" cellspacing="0">
            @Html.HiddenFor(model => Model.UserID)
            @Html.HiddenFor(model => Model.QueryNumber)
            @Html.HiddenFor(model => Model.QuestionNumber)
            @Html.HiddenFor(model => Model.Number)
            <tr>
                <td>
                    @Html.DisplayNameFor(model => Model.Name):
                </td>
                <td>
                    @Html.TextBoxFor(model => Model.Name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => Model.Score):
                </td>
                <td>
                    @Html.TextBoxFor(model => Model.Score)
                </td>
            </tr>
        </table>
        <input type="button" value="Cancel" onclick="location.href='@Url.Action("LoadQuestion", "Question", new { queryNumber = Model.QueryNumber, questionNumber = Model.QuestionNumber })'">
        <input type="submit" value="Save" /> 
    }
</div>