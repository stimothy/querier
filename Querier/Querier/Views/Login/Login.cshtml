@model Querier.Models.Login.UserLogin
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form class="form-horizontal" asp-controller="Login" asp-action="Login" method="post">
    <h4>Login</h4>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="username" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="username" class="form-control">
            <span asp-validation-for="username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="password" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="password" class="form-control">
            <span asp-validation-for="password" class="text-danger"></span>
        </div>
    </div>
